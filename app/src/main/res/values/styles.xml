<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor_color</item>
    </style>

    <!--通用输入框风格-->
    <style name="common_input_style">
        <item name="android:textColor">@color/common_txt_color</item>
        <item name="android:textColorHint">@color/common_hint_color</item>
        <item name="android:textSize">@dimen/common_txt_size</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:drawablePadding">@dimen/margin_small</item>
        <item name="android:background">@drawable/common_input</item>
    </style>

    <!--通用按钮风格-->
    <style name="common_button_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/common_btn_selector</item>
        <item name="android:textSize">@dimen/common_txt_size</item>
        <item name="android:paddingTop">@dimen/margin_smallest</item>
        <item name="android:paddingBottom">@dimen/margin_smallest</item>
    </style>

    <!--通用文本提示风格颜色999999-->
    <style name="common_lable_style">
        <item name="android:textSize">@dimen/small_txt_size</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>

    <style name="common_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_eeeee</item>
    </style>

    <!--星评风格-->
    <style name="my_ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
        <item name="android:minHeight">17dp</item>
        <item name="android:maxHeight">17dp</item>
    </style>

    <!--商家详情左侧文字风格，颜色eeeeee-->
    <style name="business_detail_l_txt_style">
        <item name="android:textSize">@dimen/small_txt_size</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:paddingRight">@dimen/padding_normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--商家详情右侧文字风格，颜色eeeeee-->
    <style name="business_detail_r_txt_style">
        <item name="android:textSize">@dimen/small_txt_size</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:lines">1</item>
    </style>

</resources>
