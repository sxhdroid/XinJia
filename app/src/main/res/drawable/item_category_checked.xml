<?xml version="1.0" encoding="utf-8"?>
<!-- 实现只保留左边框的矩形 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!--    边框颜色    -->
            <solid android:color="@color/color_2ea041"/>
        </shape>
    </item>
    <item android:left="@dimen/size_little">
        <shape>
            <!--    边框里面的颜色    -->
            <solid android:color="@color/color_f2f2f2"/>
        </shape>
    </item>
</layer-list>