<?xml version="1.0" encoding="utf-8"?>
<!-- 实现只保留下边框的矩形 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="-1dp"
        android:right="-1dp"
        android:left="-1dp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="@color/color_eeeee"/>
        </shape>
    </item>
</layer-list>