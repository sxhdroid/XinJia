<?xml version="1.0" encoding="utf-8"?><!-- 实现只保留左边框的矩形 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!--    边框颜色    -->
            <solid android:color="@color/color_dddddd" />
        </shape>
    </item>
    <item android:bottom="1px">
        <shape>
            <!--    边框里面的颜色    -->
            <solid android:color="@color/white" />
        </shape>
    </item>
</layer-list>